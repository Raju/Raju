{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"extends": [],
	"files": {
		"maxSize": 1048576,
		"ignoreUnknown": true,
		"ignore": [
			"**/*.min.js",
			"**/*.min.jsx",
			"**/*.min.ts",
			"**/*.min.tsx"
		],
		"include": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"all": false,
			"complexity": {},
			"correctness": {
				"noUnusedImports": {
					"level": "error",
					"fix": "none"
				},
				"noUnusedVariables": {
					"level": "error",
					"fix": "safe"
				}
			},
			"nursery": {},
			"performance": {},
			"security": {},
			"style": {
				"noShoutyConstants": {
					"level": "warn",
					"fix": "none"
				},
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false
					}
				},
				"useConst": {
					"level": "warn",
					"fix": "unsafe"
				},
				"useTemplate": {
					"level": "warn",
					"fix": "safe"
				}
			},
			"suspicious": {
				"noDebugger": "off",
				"noConsoleLog": "info"
			}
		},
		"ignore": [
			"**/node_modules",
			"**/tsconfig.node.json"
		],
		"include": []
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 100,
		"attributePosition": "auto",
		"include": [],
		"ignore": []
	},
	"organizeImports": {
		"enabled": true,
		"include": [],
		"ignore": []
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "asNeeded",
			"enabled": true,
			"bracketSameLine": false,
			"bracketSpacing": true
		},
		"globals": [],
		"jsxRuntime": "reactClassic",
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		},
		"formatter": {
			"enabled": true,
			"trailingCommas": "none"
		},
		"linter": {
			"enabled": true
		}
	},
	"css": {
		"parser": {
			"cssModules": true
		},
		"formatter": {
			"enabled": true,
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		}
	}
}
