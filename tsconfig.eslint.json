{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "noEmit": true,
    "allowJs": false
  },
  "extends": "./tsconfig.json",
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/node_modules/**",
    "**/dist",
    "**/dist/**",
    "**/bower_components",
    "**/bower_components/**",
    "**/tmp",
    "**/tmp/**",
    "**/temp",
    "**/temp/**",
    "**/jspm_packages",
    "**/jspm_packages/**",
    "**/.next",
    "**/.next/**"
  ],
}
